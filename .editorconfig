root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,ts,tsx,html,yml,yaml,json,css}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4
